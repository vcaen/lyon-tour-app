<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/activitybackground</item>
        <item name="android:colorBackground">@color/activitybackground</item>

    </style>

    <style name="RedActionBarActivity" parent="@style/AppTheme">
        <item name="android:actionBarStyle">@style/RedActionBar</item>
    </style>

    <style name="RedActionBar" parent="@style/AppTheme">
        <item name="android:background">@color/rouge</item>
    </style>

    <style name="FilterDialog" parent="Theme.AlertDialogPro.Material.Light">
        <item name="adpButtonBarNegativeButtonStyle">@style/ButtonStyle</item>
        <item name="adpButtonBarPositiveButtonStyle">@style/ButtonStyle</item>
        <item name="android:windowTitleStyle">@style/TitleStyle</item>
        <item name="android:alertDialogTheme">@style/color_checkbox</item>
    </style>

    <style name="TitleStyle" parent="Theme.AlertDialogPro.Material.Light">
        <item name="android:textColor">@color/rouge</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AlertDialogPro.Material.Light.Button">
        <item name="android:textColor">@color/rouge</item>
    </style>

    <style name="color_checkbox" parent="Animation.AlertDialogPro.Material.Dialog">
        <item name="colorPrimary">@color/rouge</item>
        <item name="colorPrimaryDark">@color/rouge</item>
        <item name="colorAccent">@color/rouge</item>
    </style>



</resources>
